{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "show_inline_completions": false,
  "vim_mode": true,
  "ui_font_size": 24,
  "buffer_font_size": 24,
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "JetBrains Mono",
  "theme": {
    "mode": "system",
    "light": "Ayu Dark",
    "dark": "Ayu Dark"
  },
  "extend_comment_on_newline": false,
  "format_on_save": "on",
  "autosave": "on_focus_change",
  "formatter": "language_server",
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "heex": "html",
          "Elixir": "html"
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": [
        "ruff",
        "pyright",
        "!python-refactoring",
        "!pylsp"
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Elixir": {
      "show_whitespaces": "selection",
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server"
      ]
    },
    "HEEX": {
      "show_whitespaces": "selection",
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "emmet-language-server"
      ]
    }
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [
          ".venv"
        ],
        "activate_script": "default"
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/.direnv",
    "**/.venv",
    "**/__pycache__",
    "**/.svelte-kit",
    "**/build",
    "**/package-lock.json",
    "**/bun.lockb",
    "**/.prettierignore",
    "**/requirements.txt",
    "**/.dockerignore",
    "**/.zig-cache",
    "**/zig-out",
    "**/.wrangler",
    "**/.gitignore",
    "**/.envrc",
    "**/target",
    "**/*.db*",
    "**/_build",
    "**/.elixir_ls",
    "**/deps",
    "**/.formatter.exs",
    "**/.prettierrc",
    "**/.ropeproject",
    "**/.ruff_cache"
  ]
}
