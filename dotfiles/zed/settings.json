{
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "vim_mode": true,
  "ui_font_size": 22,
  "buffer_font_size": 22,
  "theme": {
    "mode": "system",
    "light": "Ayu Dark",
    "dark": "Ayu Dark"
  },
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "formatter": "language_server",
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": [
            "\\bclass:\\s*['\"]([^'\"]*)['\"]"
          ]
        }
      }
    }
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "ruby-lsp",
        "rubocop",
        "tailwindcss-language-server",
        "!solargraph"
      ]
    }
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [
          ".venv"
        ],
        "activate_script": "default"
      }
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/.direnv",
    "**/.venv",
    "**/__pycache__",
    "**/.svelte-kit",
    "**/build",
    "**/package-lock.json",
    "**/bun.lockb",
    "**/.prettierignore",
    "**/requirements.txt",
    "**/.dockerignore",
    "**/.zig-cache",
    "**/zig-out",
    "**/.wrangler",
    "**/.gitignore",
    "**/.envrc",
    "**/target",
    "**/*.db*",
    "**/_build",
    "**/.elixir_ls",
    "**/deps",
    "**/.formatter.exs",
    "**/.prettierrc"
  ]
}
