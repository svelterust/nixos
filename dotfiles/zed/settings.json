{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "default_width": 150,
    "indent_guides": {
      "show": "never"
    }
  },
  "features": {
    "inline_completion_provider": "zed"
  },
  "show_inline_completions": true,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  "ui_font_size": 16,
  "buffer_font_size": 22,
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "JetBrains Mono",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Latte"
  },
  "extend_comment_on_newline": false,
  "format_on_save": "on",
  "autosave": "on_focus_change",
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "elixir-ls": {
      "settings": {
        "dialyzerEnabled": false
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "heex": "html",
          "Elixir": "html"
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["ruff", "pyright", "!python-refactoring", "!pylsp"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Elixir": {
      "show_whitespaces": "selection",
      "language_servers": ["elixir-ls", "tailwindcss-language-server"]
    },
    "HEEX": {
      "show_whitespaces": "selection",
      "language_servers": [
        "elixir-ls",
        "tailwindcss-language-server",
        "emmet-language-server"
      ]
    }
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".venv"],
        "activate_script": "default"
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/.direnv",
    "**/.venv",
    "**/__pycache__",
    "**/.svelte-kit",
    "**/build",
    "**/package-lock.json",
    "**/bun.lockb",
    "**/.prettierignore",
    "**/requirements.txt",
    "**/.dockerignore",
    "**/.zig-cache",
    "**/zig-out",
    "**/.wrangler",
    "**/.gitignore",
    "**/.envrc",
    "**/target",
    "**/*.db*",
    "**/_build",
    "**/.elixir_ls",
    "**/deps",
    "**/.formatter.exs",
    "**/.prettierrc",
    "**/.ropeproject",
    "**/.ruff_cache",
    "**/.env",
    "**/.metadata",
    "**/.dart_tool",
    "**/.idea",
    "**/.gradle",
    "**/.aider*",
    "**/llms*",
    "**/.ruby-version",
    "**/.gitattributes",
    "**/.rubocop.yml",
    "**/tmp"
  ]
}
